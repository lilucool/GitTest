<form bindsubmit="bindSave">
  <view class="container">

    <view class="fb-body">
      <textarea name="content" class="content" placeholder="对我们网站、商品、服务，你还有什么建议吗？你还希望在小铺上买到什么？请告诉我们..." />
      <view class="text-count">0/500</view>
    </view>
    <view class="fb-mobile">
      <view class="label">手机号码</view>
      <view class="mobile-box">
        <input name="mobile" class="mobile" maxlength="20" placeholder="方便我们与你联系" type='number' value="{{inputTxt}}" confirm-type="send">
        </input>
        <image class="clear-icon" src="/images/more/del.png"></image>
        <button class='clear-btn' plain="true" hover-class="none" bindtap="clearMobileNumber">
        </button>

      </view>
    </view>

    <button class="fb-btn" formType="submit">提交</button>

  </view>
</form>